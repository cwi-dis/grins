# $Id$
#
# Attribute definitions
# ---------------------
#
# Each definition is a 7-tuple enclosed in parenthes:
# (attrname, typedef, defaultvalue, labeltext, displayername, helptext,
#  inheritance)
#
# Attributes with names starting with _ are for caching only, these
# are only written to the .cmc file, not to the .cmif file.
#
# The typedef is used to determine how to parse the default value,
# with the provision that tuples, lists and dictionaries must
# be surrounded by an extra pair of parentheses.
#
# The helptext should be one line explaining what the attribute is for.
#
# Inheritance can be one of four names: (raw, normal, inherited, channel).
# Values 'raw', 'normal' and 'inherited' mean that node.GetRawAttr(),
# node.GetAttr() or node.GetInherAttr(), respectively, should be used to
# get this type of attribute.  The value 'channel' is the same as
# 'inherited', but means that the default can also be gotten from
# the channel attributes.  (For the time being, inheritance is optional,
# defaulting to 'normal'.)
#
# A definition need not be wholly contained in a single input line;
# blank lines and comments may be inserted freely.

(abstract (string) '' 'Abstract' default 'A brief description of the contents (documentary) ' raw)

(align (string) 'left' 'Alignment' CMIFdefault
	'Alignment of short datasets' channel)

(alt (string) '' 'Alternate text' default
	'Alternate text for media object' raw)

(anchorlist (list (enclosed (tuple (any) (int) (enclosed (list (any))))))
	() 'Anchors' hidden 'List of anchors on this node' raw)

(arm_duration (float) -1.0 'Arm duration' hidden
	'Time needed to arm this event before displaying' raw)

(author (string) '' 'Author' default 'Author (documentary)' raw)

(axis (tuple (float) (float)) (-1.0 -1.0) 'Axis' CMIFdefault
	'Draw axis if >0, specifies tick-interval' channel)

(bag_index (name) undefined 'Choice index' CMIFchildnodename
	'Name of child auto-started when choice node plays' normal)

(base (string) '' 'Base URL' default
	'Base URL of document, used for resolving relative URLs' raw)

(base_window (name) 'undefined' 'Channel base window' CMIFbasechannelname
	'Name of window in which channelwin is created' raw)

(base_winoff (tuple (float) (float) (float) (float)) (0.0 0.0 1.0 1.0)
	'Position and size' default 'Position and size. See also "units"' channel)

(bgcolor (tuple (int) (int) (int)) (255 255 255) 'Background color' color
	'Color used for background of window. Overriden by "transparent".' channel)

(bgimg (string) '' 'Background image' CMIFfile
	'Background image for window' channel)

(bitrate (int) 14400 'Peak bitrate' default
	'Peak bitrate of document in bits per second.' raw)

(border (int) 1 'Channel border' CMIFdefault
	'Determines whether channel window has a border (1=yes)' raw)

(bucolor (tuple (int) (int) (int)) (255 0 0) 'Anchor color' CMIFcolor
	'Color used for anchors in window' channel)

(center (bool) 1 'Center image' CMIFdefault
	'Determines whether image is centered' channel)

(channel (name) undefined 'Channel' channelname
	'Name of channel used to render this node (or its descendants)' inherited)

(channellist (list (enclosed (tuple (name) (attrdict)))) ()
	'Channel List' hidden
	'Channels used in this document (root node only)')

(clipbegin (string) '' 'Clip begin' default
	'Start of range of frames to be played. Simplest form is "npt=3s".' channel)

(clipend (string) '' 'Clip end' default
	'End of range of frames to be played. Simplest form is "npt=3s".' channel)

(comment (string) '' 'Comment' CMIFdefault
	 'A comment (authoring convenience only)' raw)

(copyright (string) '' 'Copyright' default 'Copyright of the item (documentary)' raw)

(crop (tuple (float) (float) (float) (float)) (0 0 0 0) 'Image crop' CMIFdefault
    'Crop image.  Values are fractions to crop from top, bottom, left, right.'
	channel)

(cview_winpos  (tuple (float) (float)) (-1 -1) 'Time chart winpos' hidden
	 'Window position for Time chart view' raw)

(cview_winsize  (tuple (float) (float)) (115.234375 115.234375) 'Time chart winsize' hidden
	 'Window size for Time chart view' raw)

(drawbox (bool) 1 'Draw anchor boxes' CMIFdefault
	'Draw anchors as boxes' channel)

(duration (float) 0.0 'Duration' default
	'Duration of a node or subtree (in seconds)' normal)

(fgcolor (tuple (int) (int) (int)) (0 0 0) 'Foreground color' CMIFcolor
	'Color used for text/images in window' channel)

(file (string) '' 'URL' file
	'URL for the data of this node' normal)

(font (string) 'Times-Roman' 'Font' CMIFfont
	'Font used to display text' channel)

(gtype (string) 'line' 'Graphtype' CMIFdefault
	'Type of graph: bar, line, hline' channel)

(hicolor (tuple (int) (int) (int)) (255 0 0) 'Highlight color' CMIFcolor
	'Color used for highlighted anchors in window' channel)

(hview_winpos (tuple (float) (float)) (-1 -1) 'Hierarchy winpos' hidden
	 'Window position for hierarchy view' raw)

(hview_winsize (tuple (float) (float)) (115.234375 115.234375) 'Hierarchy winsize' hidden
	 'Window size for hierarchy view' raw)

(hyperlinks (list (enclosed (tuple (enclosed (tuple (string) (any)))
                                   (enclosed (tuple (string) (any)))
				   (int) (int)))) ()
	'Hyperlink list' hidden
	'Hyperlinks within this document (root node only)' raw)

(layout (name) undefined 'Screen' layoutname
	'Screen for this node and its descendants. Authoring convenience only, controls channels displayed in menus.' inherited)

(layouts (list (enclosed (tuple (name) (list (name))))) () 'List of screens'
	hidden 'List of layouts within this document (root node only)' raw)

(links_winpos  (tuple (float) (float)) (-1 -1) 'Link edit window position' hidden
	 'Position of link edit window' raw)

(links_winsize  (tuple (float) (float)) (146.923828125 132.51953125) 'Link edit window size' hidden
	 'Size of link edit window' raw)

(longdesc (string) '' 'Long description URI' default
	'Link (URI) to a long description of the media object' raw)

(loop (int) 1 'Loop' default
	'Number of times the node should loop (0 is indefinite)' raw)

(macprog (string) '' 'Mac program signature' CMIFdefault
	'4-byte application signature (mac only)' channel)

(mcgroup (string) '' 'Multicast group' CMIFdefault
	'IP Multicast group address to listen to' raw)

(mcttl (int) 3 'Multicast TTL' CMIFdefault
	'TTL for outgoing multicast messages' raw)

(mimetype (string) '' 'MIME type' default
	'MIME type of media object' raw)

(name (name) '' 'Node name' default
	'Name given to a node' raw)

(noanchors (bool) 0 'Ignore anchors' CMIFdefault
	'Ignore anchors and other HTML tags' channel)

(nonlocal (bool) 0 'Remote only' CMIFdefault
	'Ignore incoming messages from local machine' raw)

(player_winpos (tuple (float) (float)) (-1 -1) 'Player winpos' hidden
	 'Window position for player control panel' raw)

(player_winsize (tuple (float) (float)) (83.544921875 46.09375) 'Player winsize' hidden
	 'Window size for player control panel' raw)

(port (int) 7000 'UDP port' CMIFdefault
	'UDP port for external hyperjumps' raw)

(pointsize (float) 0 'Point size' CMIFdefault
	'Point size of text displayed in window' channel)

(popup (bool) 1 'Popup on play' CMIFdefault
	'Determines whether channel pops up upon playing a node' raw)

(queuesize (float) 0 'Queue size' CMIFdefault
	'Audio playback queue size' channel)

(scale (float) 0.0 'Scale factor' default
	'Image magnification (0 means fit in channel)' channel)

(scalefilter (name) '' 'Scaling filter' CMIFdefault
	'Name of filter used after image scaling' channel)

(style (list (name)) () 'Style(s)' CMIFdefault
	'List of style names that apply to this node/subtree' raw)

(style_winpos (tuple (float) (float)) (-1 -1) 'Style editor winpos' hidden
	 'Window position for style editor' raw)

(style_winsize (tuple (float) (float)) (86.42578125 92.1875) 'Style editor winsize' hidden
	 'Window size for style editor' raw)

(styledict (namedict (attrdict)) () 'Style Dictionary' hidden
	'Styles used in this document (root node only)')

# This is the real sync arc data structure, on the destination!!!
(synctolist (list (enclosed (tuple (uid) (bool) (float) (bool))))
	() 'SyncTo list' hidden
	'List of sync arcs ending at this node' raw)

(terminator (name) 'LAST' 'Endsync child' termnodename
	'Name of child that terminates parallel node' normal)

(textalign (string) 'center' 'Alignment' CMIFdefault
	'Alignment of text in window' channel)

(title (string) '' 'Title' default
	 'The title of this object (documentary)' raw)

